{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@config": ["./config/index.js"],
      "@controllers/*": ["./controllers/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@routes/*": ["./routes/*"],
      "@utils/*": ["./utils/*"],
      "@validators/*": ["./utils/validators/*"]
    },
    "target": "ES2016",
    "module": "commonjs",
    "strict": true
  },
  "exclude": ["node_modules"],
  "include": [
    "./config/**/*.js",
    "./controllers/**/*.js",
    "./middlewares/**/*.js",
    "./routes/**/*.js",
    "./utils/**/*.js"
  ]
}
